{% extends 'base.html.twig' %}

{% block title %}Chantier{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Chantier</h1>
        <img src="{{ vich_uploader_asset(chantier, 'imageFile') }}" class="img-fluid" />
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ chantier.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ chantier.titre }}</td>
            </tr>
            <tr>
                <th>Descriptif</th>
                <td>{{ chantier.descriptif }}</td>
            </tr>
            <tr>
                <th>Archi</th>
                <td>{{ chantier.archi }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ chantier.createdAt ? chantier.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ chantier.prix }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ chantier.type }}</td>
            </tr>
        </tbody>
    </table>

<div class="row">
    {% for carousel in chantier.carousel %}
        <div class="col-2">
            <div class="card">
                <div class="card-body">
                    <img src="{{ vich_uploader_asset(carousel, 'imageFile') }}" class="img-fluid" />
                </div>
                <div class="card-footer text-muted">
                    <a href="{{ path('admin_chantier_carousel_remove', { id: carousel.id}) }}">Supprimer</a>
                </div>
            </div>
        </div>
    {% endfor %}
</div>

    <a href="{{ path('admin_chantier_index') }}">back to list</a>

    <a href="{{ path('admin_chantier_edit', {'id': chantier.id}) }}">edit</a>

    {{ include('admin/chantier/_delete_form.html.twig') }}
</div>
{% endblock %}
